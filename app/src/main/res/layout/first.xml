<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nature">

    <TextView
        android:id="@+id/WelcomeS"
        android:layout_width="279dp"
        android:layout_height="197dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="64dp"
        android:text="Welcome To MedicalCheck!"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/SignUpS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/SignUpS"
        android:layout_width="191dp"
        android:layout_height="77dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="add"
        android:text="Sign up"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/LogInS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WelcomeS" />

    <Button
        android:id="@+id/LogInS"
        android:layout_width="191dp"
        android:layout_height="77dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="190dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#FFFFFF"
        android:text="Log In"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpS" />

</androidx.constraintlayout.widget.ConstraintLayout>