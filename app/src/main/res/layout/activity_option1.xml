<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bodybuilder">

    <Button
        android:id="@+id/StepCounterO"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="78dp"
        android:background="@drawable/rounded_button"
        android:text="Step Counter"
        android:textColor="#FFFFFF"
        android:textColorLink="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/WorkoutO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verify" />

    <Button
        android:id="@+id/WorkoutO"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="78dp"
        android:background="@drawable/rounded_button"
        android:shadowColor="#00FFFFFF"
        android:text="Workouts"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/BmiActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StepCounterO" />

    <Button
        android:id="@+id/BmiActivity"
        android:layout_width="261dp"
        android:layout_height="90dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_button"
        android:text="Bmi Checker"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WorkoutO" />

    <Button
        android:id="@+id/Logout"
        android:layout_width="261dp"
        android:layout_height="90dp"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="121dp"
        android:background="@drawable/rounded_button"
        android:text="logout"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BmiActivity" />

    <Button
        android:id="@+id/verify"
        android:layout_width="261dp"
        android:layout_height="90dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="78dp"
        android:background="@drawable/rounded_button"
        android:text="Verify Email"
        android:textColor="#FFFFFF"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/StepCounterO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/EmailVerf" />

    <TextView
        android:id="@+id/EmailVerf"
        android:layout_width="212dp"
        android:layout_height="46dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="97dp"
        android:text="Email Not Verified!"
        android:textColor="#FFFFFF"
        android:textColorLink="#00BCD4"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/verify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>